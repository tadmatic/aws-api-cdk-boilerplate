{
  "name": "api-cdk-boilerplate",
  "license": "UNLICENSED",
  "version": "0.1.0",
  "bin": {
    "app": "bin/app.js"
  },
  "scripts": {
    "test": "jest",
    "build": "dotenv -e .env npx cdk synth",
    "build:prod": "dotenv -e .env.prod npx cdk synth",
    "deploy": "dotenv -e .env npx cdk deploy --auto-approve",
    "deploy:prod": "dotenv -e .env.prod npx cdk deploy --auto-approve",
    "watch": "dotenv -e .env npx cdk watch --hotswap --hotswap-fallback --auto-approve",
    "local-invoke": "dotenv -e npm run build && sam local invoke ${1} --template cdk.out/${npm_package_name}.template.json",
    "local-invoke:prod": "dotenv -e npm run build:prod && sam local invoke ${1} --template cdk.out/${npm_package_name}.template.json",
    "destroy": "npx cdk destroy",
    "lint": "eslint .",
    "postinstall": "npx husky install"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^1.6.0",
    "@aws-lambda-powertools/metrics": "^1.6.0",
    "@aws-lambda-powertools/tracer": "^1.6.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.363.0",
    "@aws-sdk/client-dynamodb": "^3.363.0",
    "@aws-sdk/client-s3": "^3.47.0",
    "@aws-sdk/credential-providers": "^3.303.0",
    "@aws-sdk/hash-node": "^3.357.0",
    "@aws-sdk/lib-dynamodb": "^3.387.0",
    "@aws-sdk/protocol-http": "^3.357.0",
    "@aws-sdk/s3-request-presigner": "^3.301.0",
    "@aws-sdk/url-parser": "^3.303.0",
    "@aws-sdk/util-dynamodb": "^3.365.0",
    "@middy/core": "^4.2.8",
    "aws-sdk": "^2.1333.0",
    "aws-xray-sdk": "^3.4.1",
    "source-map-support": "^0.5.16",
    "uuid": "^9.0.0",
    "yup": "^1.2.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.86",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/oidc-provider": "^8.1.1",
    "@types/simple-oauth2": "^5.0.4",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "aws-cdk-lib": "^2.87.0",
    "constructs": "^10.2.69",
    "dotenv-cli": "^7.0.0",
    "esbuild": "^0.17.14",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-import-resolver-typescript": "^3.5.4",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "~5.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
